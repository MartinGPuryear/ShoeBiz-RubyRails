<!-- 
  simple_form view to create a new user. 
 -->
 
<h2>New User</h2>

<%=   simple_form_for(@user, html: {class: 'form-horizontal' }) do |f|  %>

  <%=   f.input :first_name, autofocus: true  %>
  <%=   f.input :last_name  %>
  <%=   f.input :email      %>
  <%=   f.input :password   %>
  <%=   f.input :password_confirmation  %>
  <%=   f.button :submit, 'Sign Up', class: 'btn-primary form-button'  %>

<%  end   %>