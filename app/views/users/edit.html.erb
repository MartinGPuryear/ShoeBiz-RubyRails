<!-- 
  simple_form view to edit a user's profile. 
  Password and confirmation are both required with each edit,
  which is something I should separate out in the future.
 -->
 
<h2>Change User Profile</h2>

<%= simple_form_for(@user, html: {class: 'form-vertical' }) do |f| %>
  <%= f.input :first_name, autofocus: true %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password, placeholder: 'password required' %>
  <%= f.input :password_confirmation  %>
  <%= f.button :submit, 'Save', class: 'btn-primary form-button' %>
  <div>
    <%= link_to "Return to previous view", user_path(@user.id) %>
  </div>
<% end %>